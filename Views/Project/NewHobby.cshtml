@model Hobby;
<div class="header">
    <h2>Create a Hobby!!</h2>
    <div class="nav">
        <p><a href="/dashboard">Dashboard</a></p> | 
        <p><a href="/logout">Log Out</a></p>
    </div>
</div>
<form asp-action="ProcessNewHobby" asp-controller="Project" method="post">
    <div class="form-group">
        <p><span asp-validation-for="Name"></span></p>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>

    <div class="form-group">
        <p><span asp-validation-for="Description"></span></p>
        <label asp-for="Description"></label>
        <textarea cols="30" rows="15" asp-for="Description" ></textarea>
    </div>
    <button class="btn btn-primary">Create</button>
</form>