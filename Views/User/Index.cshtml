@model User;
<div class="d-flex justify-content-between">
    <div >
        <h3>Register</h3>
        <div class="col-5">
        <form asp-action="ProcessRegister" asp-controller="User" method="post">
            <div class="form-group">
                <p><span asp-validation-for="FirstName" class="text-danger"></span></p>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
            </div>
            <div class="form-group">
                <p><span asp-validation-for="LastName"class="text-danger"></span></p>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
            </div>
            <div class="form-group">
                <p><span asp-validation-for="UserName"class="text-danger"></span></p>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
            </div>
            <div class="form-group">
                <p><span asp-validation-for="Password"class="text-danger"></span></p>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>
            <div class="form-group">
                <p><span asp-validation-for="Confirm"class="text-danger"></span></p>
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" />
            </div>
            <button class="btn btn-primary">Register</button>
        </form>
        </div>
    </div>

    <div>
        <partial name="_Login" />
    </div>
</div>
